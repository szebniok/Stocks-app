<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="RecyclerView">
        <item name="android:background">#F0F0F0</item>
        <item name="android:paddingTop">@dimen/small_margin</item>
    </style>
    <style name="RecyclerViewItem">
        <item name="android:layout_marginLeft">@dimen/small_margin</item>
        <item name="android:layout_marginRight">@dimen/small_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
        <item name="android:background">@color/design_default_color_on_primary</item>
        <item name="android:padding">@dimen/medium_margin</item>
    </style>
</resources>